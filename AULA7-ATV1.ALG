Algoritmo "aula7-atv1"

Var
   ano, nasc, idade:Inteiro


Inicio
      escreva ("Em que ano nós estamos ?")
      leia (ano)
      escreva ("Em que ano você nasceu? ")
      leia (nasc)
      idade <- ano - nasc
      escreval ("Em ", ano, " você terá ", idade, "  anos")
      se (idade>=18) entao
      escreval ("E ja terá atingido a maior idade"
      
      


Fimalgoritmo